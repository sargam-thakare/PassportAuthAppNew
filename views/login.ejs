<html>

<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.0.0/core.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/3.1.9-1/md5.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>

</head>

<body>
    <div style="border:2px solid black; width:80%;margin:auto;margin-top:50px;padding:20px">
        <h1>Passport Auth Application</h1>

        <h3>Please Login</h3>

        <form action="/user/profile" method="POST">
            
            <input style="    height: 40px;   width: 300px;" type="text" placeholder="email" name="email">
            <br><br>
            <input style="    height: 40px;  width: 300px;" type="password" placeholder="password" name="password">
            <br><br>
            <button style="margin-left: 30px;" class="btn btn-primary" type="submit">submit</button>
   
            <br>
 
      
          <a href="/user/SignIn">Sign Up</a><br>

    
        <a href="/user/auth/google">Google Sign In/Sign Up</a>
    <br>
    
  
    <a href="/user/forgetpassword">forgetpassword</a>
    

    </form>

    </div>



 
    <script>
        <% if (flash.success && flash.success.length > 0) {%>
            new Noty({
                theme: 'relax',
                text: "<%= flash.success %>",
                type: 'success',
                layout: 'topRight',
                timeout: 1500
                
            }).show();    
        <%} %>

        <% if (flash.error && flash.error.length > 0) {%>
            new Noty({
                theme: 'relax',
                text: "<%= flash.error %>",
                type: 'error',
                layout: 'topRight',
                timeout: 1500
                
            }).show();    
        <%} %>
    </script>
    
</body>
</html>